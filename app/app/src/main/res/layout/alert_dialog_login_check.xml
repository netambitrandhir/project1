<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/head_edit">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Access Denied"
            android:textColor="#fff"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/body_edit">

    <TextView
        android:id="@+id/dialogMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Seems like you are not member of this society so you are allowed to visit only NearBy section.For other section, please sign-up/login as society member"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dialogMsg"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ok_btn"
        android:id="@+id/submit" />
    </RelativeLayout>
</LinearLayout>