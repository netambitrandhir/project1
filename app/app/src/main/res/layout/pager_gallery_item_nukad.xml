<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">


    <!--  <ProgressBar
          android:id="@+id/progress"
          android:visibility="visible"
          android:layout_centerInParent="true"
          android:layout_width="match_parent"
          android:layout_height="100dp" />-->

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/share"
        app:quickScaleEnabled="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/share">

        <TextView
            android:id="@+id/numberOfLikes"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/fullview_like_bg"
            android:gravity="center_vertical"
            android:text="3 likes"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/likeImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/not_like_fullview" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:elevation="4dp"
        android:padding="10dp"
        android:src="@drawable/share_white" />


    <ImageView
        android:id="@+id/deleteImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/share"
        android:padding="10dp"
        android:src="@drawable/delete" />


    <TextView
        android:id="@+id/page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:text="1 of 3"
        android:textColor="#fff"
        android:textSize="18dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/finalpage_blackflim"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:text="Name j-120"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/detailTxtViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Diwali Celebration  bration wit family in Zodiac.Diwali Celebratio Diwali Celebration with family in Zodiac.Diwali Celebration."
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>