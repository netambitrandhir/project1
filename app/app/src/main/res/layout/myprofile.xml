<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_yesboss"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titletextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="My Profile"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayoutTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/galleryplacholder" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_boundry"
                    android:elevation="3dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutBelow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/colorback"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:src="@color/text_hard_gray" />

                <TextView
                    android:id="@+id/textNameInitial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@color/black_shade"
                    android:text="G"
                    android:textColor="#fff"
                    android:textSize="40dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/editImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/relativeLayoutTop"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/changePassword"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/changepassbtn" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profile_item_bg"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/nameT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/nameR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nameT"
                            android:text="Gaurav Sinha"
                            android:textSize="17sp"
                            android:textColor="#000000"/>

                        <ImageView
                            android:id="@+id/edit1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/nameT"
                            android:src="@drawable/edit" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/nameR"
                            android:layout_marginTop="2dp"
                            android:background="@color/text_light_gray" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/mobileT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile No."
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mobileR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobileT"
                            android:text="9008227320"
                            android:textSize="17sp"
                            android:textColor="#000000"/>

                        <ImageView
                            android:id="@+id/edit2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/mobileT"
                            android:src="@drawable/edit"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/mobileR"
                            android:layout_marginTop="2dp"
                            android:background="@color/text_light_gray" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/cancall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Can call me"
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/cancallimg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/cancall"
                            android:src="@drawable/slider_off" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/emailT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/emailR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/emailT"
                            android:text="dhiru1122@gmail.com"
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/edit3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/emailT"
                            android:src="@drawable/edit" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/emailR"
                            android:layout_marginTop="2dp"
                            android:background="@color/text_light_gray" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/professionT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profession"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/professionR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/professionT"
                            android:text="Doctor"
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/edit4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/professionT"
                            android:src="@drawable/edit" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/professionR"
                            android:layout_marginTop="2dp"
                            android:background="@color/text_light_gray" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/profile_item_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/socity_and_flat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Society and flat you associated with "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/society"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/socity_and_flat"
                            android:text="Amrapali Zodaic 120"
                            android:textSize="17sp"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/flatno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/socity_and_flat"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/society"
                            android:text="(G-203)"
                            android:textColor="@color/text_red"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/society"
                            android:layout_marginTop="2dp"
                            android:background="@color/text_light_gray" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/profile_item_bg">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/aboutme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About me"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/aboutmetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/aboutme"
                            android:text="I am Software Engineer and i am staying here from past 10 years"
                            android:textSize="17sp"
                            android:textColor="#000000"/>

                        <ImageView
                            android:id="@+id/edit5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/edit" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/profile_item_bg">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/vehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle(s)"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/addvehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/addnewprofile" />

                        <ListView
                            android:id="@+id/listViewVehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/vehicle"
                            android:layout_marginTop="15dp"
                            android:scrollbars="none"></ListView>


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>