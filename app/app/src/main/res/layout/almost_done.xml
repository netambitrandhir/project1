<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/profilePic"
    android:background="@color/color_field">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_field"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_yesboss"
            android:elevation="12pt"
            android:minHeight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titletextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="Sign-in"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="17sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/society_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="SOCIETY SELECTED"
            android:textColor="@color/color_yesboss"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/linearLayoutconta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/society_selected"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/societyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Mahagun Mart "
                android:textColor="#4B4B4B"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/linearLayoutconta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/sign_up_profilepic" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profilePic"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/vehicleno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle No."
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vehicleMessageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/vehicleno"
                        android:layout_toRightOf="@+id/vehicleno"
                        android:text="(Can add multiple from profile page)"
                        android:textColor="@color/text_light_gray"
                        android:textSize="11sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <EditText
                        android:id="@+id/vehicleNo"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="3.5"
                        android:background="@drawable/textview_design"
                        android:maxLines="1"
                        android:paddingLeft="8dp"
                        android:textColor="#000"
                        android:textColorHint="#D7D5D6"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@id/rl"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/vehicleNo"
                        android:layout_weight="1.4"
                        android:background="@drawable/textview_design"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <Spinner
                            android:id="@+id/wheeler"
                            android:layout_width="0dp"
                            android:layout_height="15dp"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/arrow_down_sign_to_navigate"
                            android:padding="0dp" />

                        <TextView
                            android:id="@+id/wheelerType"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1.2"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text=""
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/wheelertext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.8"
                        android:lines="1"
                        android:text="Wheeler"
                        android:textColor="@color/text_light_gray"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/wheelerAdd"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:src="@drawable/addbtn"
                        android:visibility="gone" />

                </LinearLayout>

                <ListView
                    android:id="@+id/aadedVehicleList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:divider="@android:color/transparent"></ListView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/professiontext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Profession : "
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/professionMessageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="(help others to find you by profession)"
                        android:textColor="@color/text_light_gray"
                        android:textSize="11sp" />
                </LinearLayout>


                <EditText
                    android:id="@+id/professionField"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/textfield"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:textColorHint="#D7D5D6"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aboutyoutext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About you:"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/aboutYouField"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/abput_txt_filed"
                    android:gravity="top|left"
                    android:isScrollContainer="true"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/skip"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/skip_btn" />

                <ImageView
                    android:id="@+id/done"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/done_button" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>

