<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ImageView
        android:id="@+id/share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:src="@drawable/share_white"
        android:layout_alignParentRight="true"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="1 of 3"
        android:elevation="3dp"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <com.sanganan.app.customview.TouchImageView
        android:id="@+id/imgDisplay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/finalpage_blackflim"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:text="Name j-120"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/detailTxtViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Diwali Celebration  bration wit family in Zodiac.Diwali Celebratio Diwali Celebration with family in Zodiac.Diwali Celebration."
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12sp" />

    </LinearLayout>



</RelativeLayout>