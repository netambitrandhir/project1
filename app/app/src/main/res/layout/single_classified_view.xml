<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/member_bg" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/classifiedpic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/classifiedplaceholder" />

        <TextView
            android:id="@+id/classifiedtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/classifiedpic"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="I am freelancer photographer and can shoot in marriages."
            android:textColor="@color/text_hard_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/classifiedpostedby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/classifiedpostedon"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/classifiedpic"
            android:text="by Amit mishra,J 105 "
            android:textColor="@color/text_light_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/classifiedpostedon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/classifiedpic"
            android:text="12/01/2016 01:00 PM"
            android:textColor="@color/text_light_gray"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/nav_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/nextbtn" />


    </RelativeLayout>


</RelativeLayout>